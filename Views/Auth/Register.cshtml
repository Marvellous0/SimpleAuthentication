@model SimpleAuthentication.Models.RegisterVM 
<h1>Register</h1>
<form method="post">
    <div>
        <label asp-for="Name">Full Name</label>
        <input asp-for="Name" />
    </div>

    <div>
        <label asp-for="Email">User Email</label>
        <input asp-for="Email" />
    </div>

    <div>
        <label asp-for="Password">Password</label>
        <input type="password" asp-for="Password" />
    </div>

    <div>
        <label asp-for="Type">Register As:</label>
        <br />
        <input type="radio" asp-for="Type" value="Student" /> Student <br />
        <input type="radio" asp-for="Type" value="Instructor" /> Instructor <br />
    </div>

    <button type="submit">Submit</button>
</form>